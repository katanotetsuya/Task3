<div class="body">
  <div class="container">
    <% if flash[:notice] %>
    <%= flash[:notice] %>
    <% end %>
    <div class="row">
      <%= render 'books/list', user: @user  %>
      <div class="col-xs-9">
      	<h2>Books</h2>
      	<table class= "table">
      	  <thead>
      	    <tr>
      	      <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
      	    </tr>
      	  </thead>
      	  <tbody>
      	  	<% @books.each do |book| %>
      	  	<tr>
      	  	  <th>
      	  	  	<%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %>
      	  	  </th>
      	  	  <th>
                <%= link_to book_path(book) do  %>
      	  	  	 <%= book.title %>
                <% end %>
      	  	  </th>
      	  	  <th>
      	  	  	<%= book.body %>
      	  	</tr>
      	  	<% end %>
      	  </tbody>
      	</table>
      </div>
    </div>
  </div>
</div>